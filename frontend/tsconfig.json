{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "paths": {
    "@src/*": [
      "./src/*"
    ],
    "@asset/*": [
      "./src/asset/*"
    ],
    "@components/*": [
      "./src/components/*"
    ],
    "@pages/*": [
      "./src/pages/*"
    ],
    "@common/*": [
      "./src/common/*"
    ],
    "@language/*": [
      "./src/language/*"
    ],
    "@redux/*": [
      "./src/redux/*"
    ],
    "@router/*": [
      "./src/router/*"
    ],
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
